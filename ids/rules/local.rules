# Regla para ping (ICMP)
alert icmp any any -> $HOME_NET any (msg:"ICMP test detected"; sid:1000001; rev:1;)

# Regla para consultas DNS (UDP puerto 53)
alert udp any any -> any 53 (msg:"DNS query detected"; sid:1000002; rev:1;)

# Regla para tráfico HTTP (TCP 80)
alert tcp any any -> any 80 (msg:"HTTP request detected"; sid:1000003; rev:1;)

# Regla para tráfico HTTPS (TCP 443)
alert tcp any any -> any 443 (msg:"HTTPS traffic detected"; sid:1000004; rev:1;)

